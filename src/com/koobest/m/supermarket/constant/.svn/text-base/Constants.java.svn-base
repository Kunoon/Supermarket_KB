package com.koobest.m.supermarket.constant;

public class Constants {
	public static final String PRODUCT_HTML_FILE_DIR = "product.html";
	public static final String ORDER_HTML_FILE_DIR = "order.html";
	public static final String CLASS_NAME_KEY= "class_name";
	private static boolean isLoginNeed=false;
	private static int customer_id=-1;
	private static String username=null;
	private static String authtoken=null;
	public static void setCustomerId(int id){
		customer_id=id;
	}
	public static int getCustomerId(){
		return customer_id;
	}
	public static void setIsLoginNeed(boolean loginNeed){
		isLoginNeed=loginNeed;
	}
	public static boolean getIsLoginNeed(){
		return isLoginNeed;
	}
	public static void setUsername(String name){
		username=name;
	}
	public static String getUsername(){
		return username;
	}
	public static void setAuthtoken(String token){
		authtoken=token;
	}
	public static String getAuthtoken(){
		return authtoken;
	}
}
