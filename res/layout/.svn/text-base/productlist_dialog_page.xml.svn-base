<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="fill_parent"
	android:background="#f5f5f5"
	android:orientation="vertical">
	<TextView 
		android:layout_width="match_parent"
		android:layout_height="45sp"
		android:text="@string/b1_dialog_tag"
		android:textColor="@color/text_color"
		android:textSize="17sp"
		android:gravity="center"/>
    <ListView 
	    android:id="@+id/lv_productlist"
	    android:cacheColorHint="#00000000"
	    android:layout_width="match_parent"
	    android:layout_height="300sp"
	    android:listSelector="@drawable/list_selector"
	    android:divider="@color/list_line"    
	 	android:dividerHeight="0.5dp"
	    android:layout_weight="1"/>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="6sp"
	    android:layout_marginBottom="6sp"
	    android:orientation="horizontal">
	    <LinearLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_weight="1"
	    	android:gravity="center"
	    	android:layout_marginLeft="10sp"
	    	android:layout_height="wrap_content">
	    	<Button
		    	android:id="@+id/btn_pre"
		    	android:layout_width="100sp"
		    	android:layout_height="40sp"
		    	android:textSize="@dimen/btn_word"
		    	android:background="@drawable/dialog_btn_style"
		    	android:textColor="#4169e1"
		    	android:text="@string/search_list_btn_prev"/>
	    	<!-- 
	    	<Button 
		    	android:id="@+id/btn_pre"
		    	android:layout_width="20sp"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/dialog_btn_pre_style"/> -->
	    </LinearLayout>
	    <LinearLayout 
	    	android:layout_width="wrap_content"
	    	android:layout_weight="1"
	    	android:gravity="center"
	    	android:layout_marginRight="10sp"
	    	android:layout_height="wrap_content">
	    	<Button
		    	android:id="@+id/btn_next"
		    	android:layout_width="100sp"
		    	android:layout_height="40sp"
		    	android:textSize="@dimen/btn_word"
		    	android:background="@drawable/dialog_btn_style"
		    	android:textColor="#4169e1"
		    	android:text="@string/search_list_btn_next"/>
	    	<!-- 
	    	<Button 
		    	android:id="@+id/btn_next"
		    	android:layout_width="20sp"
		    	android:layout_height="wrap_content"
		    	android:background="@drawable/dialog_btn_next_style"/> -->
	    </LinearLayout>
	    
    </LinearLayout>
</LinearLayout>
