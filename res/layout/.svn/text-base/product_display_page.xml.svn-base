<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@id/gen_background"
	xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout 
    	android:layout_height="@dimen/title_height" 
    	android:background="@drawable/titlebar" 
    	android:layout_width="match_parent" 
    	android:id="@+id/textView1">
        <Button 
        	android:layout_height="wrap_content" 
        	android:textColor="@color/btn_color" 
        	android:id="@id/gen_btn_back" 
        	android:layout_gravity="center_vertical" 
        	android:text="@string/gen_btn_back" 
        	android:textSize="@dimen/title_btn_word"
        	android:layout_width="@dimen/title_btn_width" 
        	android:background="@drawable/title_btn_back"/>
        <TextView 
        	android:textSize="@dimen/title_word" 
        	android:textColor="@color/title_color"
        	android:layout_height="wrap_content" 
        	android:id="@+id/textView3" 
        	android:layout_gravity="center" 
        	android:gravity="center" 
        	android:layout_width="wrap_content" 
        	android:layout_weight="1" 
        	android:text="@string/pro_det_tag"/>
        <Button 
        	android:layout_height="wrap_content" 
        	android:textColor="@color/btn_color" 
        	android:id="@id/gen_btn_main" 
        	android:textSize="@dimen/title_btn_word"
        	android:layout_gravity="center_vertical" 
        	android:text="@string/gen_btn_main" 
        	android:layout_width="@dimen/title_btn_width" 
        	android:background="@drawable/title_btn_main"/>
    </LinearLayout>
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="10">
		<WebView  
		    android:id="@+id/wv"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"/>
	</FrameLayout>
	<ProgressBar 
		android:id="@+id/progress_display" 
		android:layout_width="fill_parent" 
		android:layout_height="2sp"
		android:progress="1"
		android:max="4"
		android:visibility="invisible"
		style="?android:attr/progressBarStyleHorizontal"/>

	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="5sp"
		android:orientation="horizontal">
		
		<LinearLayout
			android:layout_width="0sp"
			android:layout_height="@dimen/btn_height"
			android:layout_weight="1"
			android:orientation="horizontal">
			<EditText 
				android:textColor="@color/text_color"
				android:background="@drawable/edittext_pro_display"
				android:layout_width="match_parent"
				android:singleLine="true"
				android:numeric="integer" 
				android:maxLength="5"
				android:layout_height="@dimen/btn_height"
				android:id="@+id/pro_det_qty" android:hint="@string/pro_det_ev_qty_hint" android:textSize="20sp"/>
		</LinearLayout>
		<Button
			android:layout_width="0sp"
			android:layout_height="@dimen/btn_height"
			android:layout_weight="1"
			android:textSize="@dimen/btn_word"
			android:text="@string/c_addtoquoter"
			android:background="@drawable/btn_display" 
			android:layout_gravity="center" 
			android:textColor="@color/btn_color" android:id="@+id/pro_det_add_to_quo"/>
		<Button
			android:layout_marginLeft="10sp"
			android:id="@+id/add_to_favorite"
			android:layout_width="0sp"
			android:layout_height="@dimen/btn_height"
			android:enabled="false"
			android:layout_weight="1"
			android:textSize="@dimen/btn_word"
			android:text="@string/c_addtofavor"
			android:background="@drawable/btn_default" 
			android:layout_gravity="center" 
			android:textColor="@color/btn_color"/>
	</LinearLayout>
	<TextView 
		android:layout_height="@dimen/bottom_bar_height" 
		android:id="@+id/textView2" 
		android:layout_width="match_parent" 
		android:background="@drawable/bottom"/>
</LinearLayout>

