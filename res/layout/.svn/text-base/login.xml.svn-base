<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
    android:id="@id/gen_background"
    android:weightSum="20">
    <TextView android:textSize="@dimen/title_word" 
    	android:id="@+id/textView1"
    	android:layout_width="match_parent" 
    	android:background="@drawable/titlebar" 
    	android:gravity="center" 
    	android:textColor="@color/title_color" 
    	android:layout_height="@dimen/title_height" 
    	android:text="@string/app_name"/>
    <LinearLayout 
    	android:id="@+id/linearLayout1" 
    	android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	android:orientation="vertical" 
    	android:gravity="center" 
    	android:weightSum="1" 
    	android:layout_weight="4">
        <ImageView android:id="@+id/imageView1" 
        	android:src="@drawable/logo" 
        	android:layout_width="225sp" 
        	android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout 
    	android:layout_width="match_parent" 
    	android:id="@+id/relativeLayout1" 
    	android:layout_height="300sp" 
    	android:layout_weight="16">
        <TextView 
        	android:id="@+id/textView3" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_marginRight="20sp"
        	android:layout_marginLeft="35sp"
        	android:textSize="@dimen/key_word" 
        	android:textColor="@color/key_word_color" 
        	android:text="@string/lg_username"/>
        <EditText 
        	android:layout_height="wrap_content" 
        	android:layout_below="@id/textView3" 
        	android:layout_marginLeft="30sp" 
        	android:layout_marginRight="30sp" 
        	android:layout_width="match_parent"
        	android:textSize="@dimen/text_word" 
        	android:background="@drawable/edittext" 
        	android:id="@id/lg_et_username" 
        	android:singleLine="true">
            <requestFocus></requestFocus>
        </EditText>
        <TextView 
        	android:id="@+id/textView4" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content" 
        	android:layout_below="@id/lg_et_username" 
        	android:layout_marginLeft="35sp" 
        	android:textSize="@dimen/key_word"
        	android:layout_marginTop="30sp" 
        	android:textColor="@color/key_word_color" 
        	android:text="@string/lg_password"/>
        <EditText 
        	android:id="@id/lg_et_password" 
        	android:layout_below="@id/textView4" 
        	android:layout_width="match_parent" 
        	android:layout_marginLeft="30sp" 
        	android:layout_marginRight="30sp" 
        	android:background="@drawable/edittext" 
        	android:layout_height="wrap_content" 
        	android:password="true" 
        	android:textSize="@dimen/text_word"
        	android:singleLine="true"/>
        <LinearLayout 
        	android:id="@+id/linearLayout2" 
        	android:layout_height="wrap_content" 
        	android:layout_centerVertical="true" 
        	android:layout_alignLeft="@id/lg_et_password" 
        	android:layout_width="match_parent" 
        	android:layout_marginRight="30sp" 
        	android:layout_marginTop="30sp"  
        	android:gravity="center"
        	android:layout_below="@id/lg_et_password">
            <Button 
            	android:textColor="@color/btn_color" 
            	android:layout_width="@dimen/btn_width" 
            	android:id="@id/gen_btn_back" 
            	android:layout_height="@dimen/btn_height" 
            	android:background="@drawable/btn_default_back" 
            	android:text="@string/gen_btn_back"/>
            <Button 
            	android:layout_marginLeft="20sp" 
            	android:textColor="@color/btn_color" 
            	android:id="@id/lg_btn_login" 
            	android:layout_width="@dimen/btn_width"
            	android:layout_height="@dimen/btn_height" 
            	android:background="@drawable/btn_default" 
            	android:text="@string/lg_btn_login"/>
        </LinearLayout>
        <TextView 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:layout_below="@+id/linearLayout2" 
        	android:layout_alignLeft="@+id/linearLayout2" 
        	android:layout_marginTop="27dp" 
        	android:layout_alignRight="@+id/linearLayout2" 
        	android:id="@id/lg_tv_alert" 
        	android:textSize="@dimen/warm_word"
        	android:textColor="@color/warm_word_color" 
        	android:text="@string/lg_prompt"/>
        <TextView 
        	android:background="@drawable/bottom" 
        	android:layout_width="match_parent" 
        	android:id="@+id/textView2" 
        	android:layout_alignParentBottom="true" 
        	android:layout_alignParentLeft="true" 
        	android:layout_height="30dp"/>
    </RelativeLayout>
</LinearLayout>
