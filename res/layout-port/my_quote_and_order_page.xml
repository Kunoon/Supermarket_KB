<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@id/gen_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
    	android:layout_height="@dimen/title_height" 
    	android:layout_width="match_parent" 
    	android:background="@drawable/titlebar" 
    	android:id="@+id/textView1">
        <Button 
        	android:layout_width="@dimen/title_btn_width" 
        	android:textColor="@color/btn_color" 
        	android:id="@id/gen_btn_back" 
        	android:background="@drawable/title_btn_back" 
        	android:layout_height="wrap_content" 
        	android:textSize="@dimen/title_btn_word"
        	android:layout_gravity="center_vertical" 
        	android:text="@string/gen_btn_back"/>
        <TextView 
        	android:textSize="@dimen/title_word" 
        	android:textColor="@color/title_color" 
        	android:layout_width="0sp"
        	android:layout_weight="1" 
        	android:gravity="center" 
        	android:singleLine="true"
        	android:focusable="true"
        	android:focusableInTouchMode="true"
        	android:ellipsize="marquee"
        	android:marqueeRepeatLimit="marquee_forever"
        	android:id="@+id/textView3" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center" 
        	android:text="@string/ord_list_tag"/>
        <Button 
        	android:layout_width="@dimen/title_btn_width" 
        	android:textColor="@color/btn_color" 
        	android:id="@id/gen_btn_main" 
        	android:textSize="@dimen/title_btn_word"
        	android:background="@drawable/title_btn_main" 
        	android:layout_height="wrap_content" 
        	android:layout_gravity="center_vertical" 
        	android:text="@string/gen_btn_main"/>
    </LinearLayout>
    <TabHost 
    	android:id="@android:id/tabhost"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1">
	    <LinearLayout 
	    	android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		    <TabWidget 
	    		android:layout_width="fill_parent"
	    		android:layout_height="@dimen/tab_height"
	    		android:id="@android:id/tabs"
	    		/>
		    <FrameLayout 
		   		android:id="@android:id/tabcontent"
				android:layout_width="fill_parent"
				android:layout_marginTop="25sp"
				android:layout_height="fill_parent"
				>
				<LinearLayout
					android:id="@+id/orders_tab_content_1"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">  
					<ListView
						android:id="@+id/orders_of_ready"
						android:layout_width="fill_parent"
						android:layout_height="150sp"
						android:layout_weight="1"
						android:layout_marginLeft="10sp"
						android:layout_marginRight="10sp"
						android:cacheColorHint="#00000000"
						android:listSelector="@drawable/list_selector"
						android:layout_marginBottom="8sp"
						android:divider="@color/list_line"       
						android:dividerHeight="0.5dp"/>
				</LinearLayout> 
				<LinearLayout
					android:id="@+id/orders_tab_content_2"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical"
					>  
					<ListView
						android:id="@+id/orders_of_request"
						android:layout_width="fill_parent"
						android:layout_height="150sp"
						android:layout_weight="1"
						android:layout_marginLeft="10sp"
						android:layout_marginRight="10sp"
						android:cacheColorHint="#00000000"
						android:listSelector="@drawable/list_selector"
						android:layout_marginBottom="8sp"
						android:divider="@color/list_line"    
						android:dividerHeight="0.5dp"/>
				</LinearLayout>   
			</FrameLayout>
		</LinearLayout>
	</TabHost>
    <LinearLayout 
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:orientation="horizontal" 
    	android:gravity="center" 
    	android:layout_marginBottom="10dp" 
    	android:layout_marginTop="10dp">
        <Button 
        	android:layout_width="150sp" 
        	android:textSize="@dimen/btn_word" 
        	android:id="@+id/refresh" 
        	android:gravity="center"  
        	android:background="@drawable/btn_default" 
        	android:layout_height="@dimen/btn_height" 
        	android:text="@string/f_refresh" 
        	android:layout_marginTop="2sp" 
        	android:layout_gravity="center" 
        	android:textColor="@color/btn_color"/>
    </LinearLayout>
	<TextView 
		android:layout_width="match_parent" 
		android:id="@+id/textView2" 
		android:background="@drawable/bottom" 
		android:layout_height="@dimen/bottom_bar_height"/>
</LinearLayout>
